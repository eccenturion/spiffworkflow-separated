# Archivo .env para la configuración de spiff-arena

# PostgreSQL Configuration
POSTGRES_PASSWORD=spiffworkflow_secure_password
POSTGRES_PORT=5432

# Frontend Configuration
SPIFFWORKFLOW_FRONTEND_PORT=8001

# Backend API Configuration
SPIFF_BACKEND_PORT=8000

# Connector Configuration
SPIFF_CONNECTOR_PORT=8004

# Flask Configuration
FLASK_SESSION_SECRET_KEY=your_super_secret_key_here_change_in_production

# Security (cambiar en producción)
FLASK_ENV=production
FLASK_DEBUG=0

# Connector Proxy URL
SPIFFWORKFLOW_BACKEND_CONNECTOR_PROXY_URL=http://spiffworkflow-connector:8004

# Local process models directory (opcional)
# SPIFFWORKFLOW_BACKEND_LOCAL_BPMN_SPEC_DIR=./process_models

# User/Group for file permissions (solo para desarrollo local)
# RUN_AS=1000:1000